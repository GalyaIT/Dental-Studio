@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}
<div class="containerForm" style="margin-top: 3%">
    <div class="row">
        <div class="col-sm-4"> </div>
        <div class="col-md-4">
            <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <h4 class="text-center text-info">Create a new account.</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Input.FirstName"></label>
                    <input type="text" class="form-control" id="firstName"
                           placeholder="First Name..." asp-for="Input.FirstName">
                    <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.LastName"></label>
                    <input type="text" class="form-control" id="lastName"
                           placeholder="Last Name..." asp-for="Input.LastName">
                    <span asp-validation-for="Input.LastName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Username">Username</label>
                    <input type="text" class="form-control" id="username"
                           placeholder="Username..." asp-for="Input.Username">
                    <span asp-validation-for="Input.Username" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Email">Email address:</label>
                    <input type="text" class="form-control" id="email"
                           placeholder="Email address...." asp-for="Input.Email">
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password">Password:</label>
                    <input type="password" class="form-control" id="password"
                           placeholder="Password..." asp-for="Input.Password">
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.ConfirmPassword">Confirm Password:</label>
                    <input type="password" class="form-control" id="confirmPassword"
                           placeholder="Confirm Password..." asp-for="Input.ConfirmPassword">
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary">Register</button>
            </form>
            <br />
            <a href="Login" class="pull-right btn btn-block btn-info"> Already Register ?</a>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
