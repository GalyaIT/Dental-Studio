@using DentalStudio.Web.ViewComponents.Models
@using DentalStudio.Common
@model StatisticModel
<!-- STATISTIC-->
<section class="statistic" style="margin-top: 2%">
    <div class="container">
        <div class="row">
            <div class="col-md-3 ">
                <div class="statistic__item">
                    <div class="number">@Model.Doctors</div>
                    <span>Doctors</span>
                </div>
            </div>
            <div class="col-md-3 ">
                <div class="statistic__item">
                    <div class="number">@Model.Patients</div>
                    <span>Patients</span>
                </div>
            </div>
            <div class="col-md-3">
                <div class="statistic__item">
                    <div class="number">@Model.Appointments</div>
                    <span>Appointments</span>
                </div>
            </div>
            <div class="col-md-3">
                <div class="statistic__item">
                    <div class="number">@Model.Procedures</div>
                    <span>Procedures</span>
                </div>
            </div>
        </div>
        <hr />
    </div>

</section>
<!-- END STATISTIC-->