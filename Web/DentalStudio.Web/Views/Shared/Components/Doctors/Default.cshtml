@using DentalStudio.Web.ViewComponents.Models
@model DoctorAboutViewModel


<div class="col-lg-4">
    <div class="doctor-item di-bg">
        <div class="col-lg-6">
            <img src="@Model.Photo" alt="" style="width:100px; height:100px;">
        </div>
        <h5>Dr @Model.FullName</h5>
        <p>Head of the team</p>
    </div>
</div>
@foreach (var doctor in Model.Doctors)
{
    <div class="col-lg-2 col-md-3  col-sm-6">
        <div class="doctor-item">
            <img src="@doctor.Photo" alt="Doctor Photo" style="width:100px; height:100px;">
            <h6>Dr @doctor.FullName</h6>
            <p>@doctor.Specialty</p>
            <a asp-action="DoctorDetails" asp-controller="Patients"
               asp-route-id="@doctor.Id">More info <i class="fa fa-arrow-circle-right"></i></a>
        </div>
    </div>
}

