@model DentalStudio.Web.ViewModels.Posts.PostEditViewModel
@{
    this.ViewData["Title"] = "Edit blog post";
}

<h2>@this.ViewData["Title"]</h2>

<script src="/lib/tinymce/tinymce.min.js" type="text/javascript"></script>
<script type="text/javascript">
    tinymce.init({
        selector: "textarea",
        plugins: [
            "image paste table link code media"
        ]
    });
</script>
<form asp-controller="Posts" asp-action="Edit" method="post" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly"></div>

    <div>
        <label asp-for="ImageUrl"></label>
        <input type="file" class="form-control" id="imageUrl" placeholder="Image..." asp-for="ImageUrl">
        <span asp-validation-for="ImageUrl" class="text-danger"></span>
        <span id="file-selected"></span>
    </div>

    <div>
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="Content"></label>
        <textarea asp-for="Content" class="form-control"></textarea>
        <span asp-validation-for="Content" class="text-danger"></span>
    </div>
    <hr />
    <input type="submit" class="btn btn-primary" />
    <a asp-controller="Posts" asp-action="All" class="btn btn-info">Back</a>
</form>
