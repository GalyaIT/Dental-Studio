@using DentalStudio.Web.ViewModels.Patients
@using DentalStudio.Common
@model PatientDoctorDetailsViewModel
@{
    ViewData["Title"] = "Details";
}

@if (this.User.Identity.IsAuthenticated && this.User.IsInRole(GlobalConstants.PatientRoleName))
{
    <div class="containerForm" style="margin-top: 2%">
        <div class="row">
            <div class="col-md-6">
                <div style="padding-bottom:5%">
                    <img src="@Model.Photo" alt="" style="width:400px; height:300px;">
                </div>
                <div class="card-header" style="margin-top: 2%">
                    D-r: @Model.FullName
                </div>
                <div class="card-header" style="margin-top: 2%">
                    Speciality: @Model.Specialty
                </div>
                <div class="card-header" style="margin-top: 2%">
                    Email: @Model.Email
                </div>
                <div class="card-header" style="margin-top: 2%">
                    Phone Number: @Model.PhoneNumber
                </div>
                <div class="card-header" style="margin-top: 2%">
                    Gender: @Model.Gender
                </div>
                <div class="card-header" style="margin-top: 2%">
                    <a class="btn btn-info mb-3" style="width:auto"
                       asp-action="Doctors" asp-controller="Patients"> Back</a>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card-body">
                    @Html.Raw(Model.SanitizedGrade)
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="containerForm" style="margin-top: 2%">
        <div class="row">
            <div class="col-md-6">
                <div style="padding-bottom:5%">
                    <img src="@Model.Photo" alt="" style="width:400px; height:300px;">
                </div>
                <div class="card-header" style="margin-top: 2%">
                    D-r: @Model.FullName
                </div>
                <div class="card-header" style="margin-top: 2%">
                    Speciality: @Model.Specialty
                </div>
                <div class="card-header" style="margin-top: 2%">
                    Email: @Model.Email
                </div>
                <div class="card-header" style="margin-top: 2%">
                    Phone Number: @Model.PhoneNumber
                </div>
                <div class="card-header" style="margin-top: 2%">
                    Gender: @Model.Gender
                </div>
                <div class="card-header" style="margin-top: 2%">
                    <a class="btn btn-info mb-3" style="width:auto"
                       asp-action="About" asp-controller="Home"> Back</a>
                    <a class="btn btn-outline-info btn-sm float-right"
                       asp-action="AddAppointmentByDoctor" asp-controller="Patients"
                       asp-route-id="@Model.Id">Запази час</a>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card-body">
                    @Html.Raw(Model.SanitizedGrade)
                </div>
            </div>
        </div>
    </div>

}
